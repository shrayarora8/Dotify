<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_twelve"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/img"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        android:scaleType="fitCenter"
        android:src="@drawable/strangers_cover_art"
        android:background="@null"
        app:layout_constraintRight_toRightOf="@id/division"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:foreground="?selectableItemBackground"/>

    <TextView
        android:id="@+id/tVName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="God's plan"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/division"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img"/>

    <TextView
        android:id="@+id/tVArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="God's plan featurnig Drake and Migossssss"
        android:textSize="30sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="@id/division"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tVName"
        />

    <TextView
        android:id="@+id/tvPlays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@id/division"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tVArtist" />


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/tvPlays"
        android:layout_marginTop="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/division"
        >

        <ImageButton
            android:id="@+id/imgPrev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:foreground="?selectableItemBackground"
            android:src="@drawable/ic_previous" />

        <ImageButton
            android:id="@+id/imgPlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:foreground="?selectableItemBackground"
            android:src="@drawable/ic_play"
            />

        <ImageButton
            android:id="@+id/imgNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:foreground="?selectableItemBackground"
            android:src="@drawable/ic_next" />

    </LinearLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>


</androidx.constraintlayout.widget.ConstraintLayout>